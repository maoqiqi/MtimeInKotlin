<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardElevation="5dp"
    card_view:cardBackgroundColor="@color/itembkg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="PxUsage">

        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10px"
            android:text="预告片："
            android:textColor="#000"
            android:textSize="13sp"
            android:textStyle="italic|bold" />

        <TextView
            android:id="@+id/more_trailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15px"
            android:layout_marginTop="8px"
            android:text="更多视频 "
            android:textColor="#000"
            android:textStyle="italic|bold" />

        <RelativeLayout
            android:id="@+id/layout_image1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title1"
            android:visibility="gone">

            <ImageView
                android:id="@+id/v_image1"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/play_video1"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_video_play" />

            <TextView
                android:id="@+id/v_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_image1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10px"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="bold|italic" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_image2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_image1"
            android:layout_marginTop="15px"
            android:visibility="gone">

            <ImageView
                android:id="@+id/v_image2"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/play_video2"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_video_play" />

            <TextView
                android:id="@+id/v_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_image2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10px"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="bold|italic" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_image3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layout_image2"
            android:layout_marginTop="15px"
            android:visibility="gone">

            <ImageView
                android:id="@+id/v_image3"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/play_video3"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_video_play" />

            <TextView
                android:id="@+id/v_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/v_image3"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10px"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="bold|italic" />

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
